    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Danh sách truyện</h2>

<p>
    @Html.ActionLink("Tạo mới chap", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tentruyen)
        </th>
        <th>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
